<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sparkdev.foodapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/g1321"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/g1321"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".registerscreen.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mainscreen.productpage.ProductPageActivity"></activity>
        <activity android:name=".mainscreen.productpage.ReviewSubmissionPage" />
        <activity
            android:name=".mainscreen.TabLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".loginscreen.Login"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".shoppingcartscreen.OrderScreen.OrderScreenActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".shoppingcartscreen.confirmationscreen.ConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".shoppingcartscreen.ThankYouScreen.ThankYouScreen"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".profileSettings.ProfileSettings"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>